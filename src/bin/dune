
(executable
  (name           main)
  (public_name    dolmen)
  (package        dolmen_bin)
  (ocamlopt_flags -afl-instrument)
  (libraries
    ; external deps
    cmdliner fmt gen
    ; dolmen deps
    dolmen dolmen.intf dolmen.std
    dolmen_type dolmen_loop
    )
)

; Rule to generate a man page for dolmen
(rule
  (target        dolmen.1)
  (action (with-outputs-to %{target} (run dolmen --help=groff)))
)

; Install the man page
(install
 (files    dolmen.1)
 (section  man)
 (package  dolmen_bin)
)
